---
interface Props {
    text: string
}
const { text } = Astro.props
---
<a
    class="absolute bg-smoke-700 w-36 h-12 bottom-0 left-1/2 -translate-x-1/2 z-20 rounded-lg grid place-content-center a-link overflow-hidden group"
    href="/works"
>
    <span
        class="text-neutral-800 font-semibold bg-central-400 rounded-lg flex justify-center items-center absolute inset-[2px] transition-colors duration-300 group-hover:bg-central-400/90 ll"
        >{text}</span
    >
</a>

<style>
    .a-link::before {
        content: "";
        position: absolute;
        top: 0;
        left: -2rem;
        border-radius: inherit;
        width: 4rem;
        height: 4rem;
        background: rgb(255, 255, 255);
        background: radial-gradient(
            circle,
            rgba(255, 255, 255, 0.6) 0%,
            rgba(255, 255, 255, 0.3) 18%,
            rgba(255, 255, 255, 0) 59%
        );
        opacity: 0;
        transition: all 0.3s ease-in-out;
    }

    .a-link:has(.ll:hover)::before {
        opacity: 1;
        animation: recorrido 3.5s linear infinite both;
    }

    @keyframes recorrido {
        12.5% {
            top: -2rem;
        }
        37.5% {
            top: -2rem;
            left: calc(100% - 2rem);
        }
        62.5% {
            top: calc(100% - 2rem);
            left: calc(100% - 2rem);
        }
        87.5% {
            top: calc(100% - 2rem);
            left: -2rem;
        }
        100% {
            top: 0rem;
        }
    }
</style>
