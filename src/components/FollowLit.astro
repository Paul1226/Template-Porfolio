---
import Arrow from "../../public/icons/Arrow.astro";

interface Props {
    title: string;
    url: string;
}

const { title, url } = Astro.props;
---

<li>
    <a
        class="flex flex-col p-2 bg-smoke-800 rounded-xl border border-smoke-700 h-12 overflow-hidden hover:bg-smoke-700 transition-colors duration-300 ease-in-out group"
        href={url}
        target="_blank"
        rel="noopener noreferrer"
    >
        <div class="flex justify-between items-center w-full h-full">
            <div class="flex items-center gap-2">
                <figure class="w-9 h-9 p-2 rounded-[10px] bg-smoke-500">
                    <slot name="icon" />
                </figure>
                <span class="text-neutral-500 font-semibold">{title} </span>
            </div>

            <Arrow class="w-5 fill-neutral-400 mr-2 opacity-0 transition-all duration-300 group-hover:-rotate-45 group-hover:opacity-100" />
        </div>
    </a>
</li>