---
import Person from "../../public/icons/Person.astro";
import Works from "../../public/icons/Works.astro";
import NavServices from "../../public/icons/NavServices.astro";
---

<nav
    class="bg-smoke-900 p-2 rounded-xl border border-smoke-700 md:hidden h-[65px] w-full"
>
    <ul class="grid grid-cols-3 gap-x-2 h-full">
        <li>
            <a class="link-nav active" href="/">
                <Person class="w-5 fill-central-50" />
                <span>About</span>
            </a>
        </li>
        <li>
            <a class="link-nav" href="/Works" rel="noopener noreferrer">
                <Works class="w-5 fill-central-50" />
                <span>Works</span>
            </a>
        </li>
        <li>
            <a class="link-nav" href="/Services" rel="noopener noreferrer">
                <NavServices class="w-5 fill-central-50" />
                <span>Services</span>
            </a>
        </li>
    </ul>
</nav>