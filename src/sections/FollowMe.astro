---
import HeaderCards from "../components/HeaderCards.astro"
import Focus from "../../public/icons/Focus.astro"

import FollowLit from "../components/FollowLit.astro"

// icons
import Twitter404 from "../../public/icons/404Icons/Twitter404.astro"
import Instagram404 from "../../public/icons/404Icons/Instagram404.astro"
import Linkedin404 from "../../public/icons/404Icons/Linkedin404.astro"
---

<article
    class="bg-smoke-900 rounded-xl pt-4 border border-smoke-700 flex flex-col relative"
>
    <HeaderCards title="Online Presence" subtitle="Follow Me">
        <Focus class="w-5 fill-central-400" slot="icon" />
    </HeaderCards>

    <ul class="w-full h-full flex flex-col gap-3 p-4">
        <FollowLit title="@PaulDev" url="https://twitter.com/">
            <Twitter404 class="w-5 fill-central-300" slot="icon" />
        </FollowLit>
        <FollowLit title="@PaulDev" url="https://github.com/">    
            <Instagram404 class="w-5 fill-central-300" slot="icon" />
        </FollowLit>
        <FollowLit title="@PaulDev" url="https://www.linkedin.com/in/">
            <Linkedin404 class="w-5 fill-central-300" slot="icon" />
        </FollowLit>
    </ul>
</article>